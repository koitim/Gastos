<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        tools:context="br.com.koitim.gastos.despesa.Cadastro"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardElevation="0dp"
            app:cardCornerRadius="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/despesa_rl_saldo_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:text="Saldo total:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:id="@+id/despesa_tv_saldo_total"
                        android:text="R$ 15.000,00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:gravity="end"
                        android:layout_gravity="end"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/despesa_rl_saldo_fonte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:text="Saldo da fonte:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:id="@+id/despesa_tv_saldo_fonte"
                        android:text="R$ 1.000,00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:gravity="end"
                        android:layout_gravity="end"/>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingTop="10dp"
            app:cardElevation="1dp"
            app:cardCornerRadius="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/despesa_rl_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:text="Data:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"/>
                    <EditText
                        android:id="@+id/despesa_et_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:inputType="date"
                        android:numeric="decimal"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/despesa_rl_valor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:text="Valor:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"/>
                    <EditText
                        android:id="@+id/despesa_et_valor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:inputType="numberDecimal"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/despesa_rl_fonte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:text="Fonte:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:id="@+id/despesa_tv_fonte"/>
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/despesa_sp_fonte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="false"
                        android:layout_centerVertical="true"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:layout_toEndOf="@+id/despesa_tv_fonte">
                    </android.support.v7.widget.AppCompatSpinner>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/despesa_rl_categoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:text="Categoria:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:id="@+id/despesa_tv_categoria"/>
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/despesa_sp_categoria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="false"
                        android:layout_centerVertical="true"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:layout_toEndOf="@+id/despesa_tv_categoria">
                    </android.support.v7.widget.AppCompatSpinner>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/despesa_rl_credor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:text="Credor:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:id="@+id/despesa_tv_credor"/>
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/despesa_sp_credor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="false"
                        android:layout_centerVertical="true"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:layout_toEndOf="@+id/despesa_tv_credor">
                    </android.support.v7.widget.AppCompatSpinner>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/despesa_rl_favorecido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:text="Favorecido:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:id="@+id/despesa_tv_favorecido"/>
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/despesa_sp_favorecido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="false"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:layout_toEndOf="@+id/despesa_tv_favorecido">
                    </android.support.v7.widget.AppCompatSpinner>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:id="@+id/despesa_bt_salvar"
                    android:text="Salvar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="14sp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>